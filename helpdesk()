void helpdesk() {
    int pilihPanduan;

    do{
       printf("\nPanduan Aplikasi\n");
       printf("1. Panduan registrasi dan login\n");
       printf("2. Panduan pemesanan\n");
       printf("3. Panduan pembayaran\n");
       printf("4. Kembali ke menu utama\n");
       printf("Pilih Panduan: ");
       scanf("%d", &pilihPanduan);

       switch (pilihPanduan) {
        case 1:
            printf("Panduan registrasi dan login:\n 1.Pada tahap registrasi masukkan ussername, password, nama lengkap, email, alamat, & telepon\n 2. Pada tahap login masukkan ussername & password\n ");
            break;
    
        case 2:
            printf("Panduan pemesanan:\n masukkan layanan jasa servis yang di inginkan\n ");
            break;
        
        case 3:
            printf("Panduan pembayaran:\n masukkan nama pemesan & jasa pesanan\n" );
            break;

        case 4:
            printf("Kembali ke menu utama\n");
            break;

        default:
            printf("pilihan tidak ada, silahkan coba lagi\n");

        }

    }while (pilihPanduan != 4);
}
